{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Current Test File",
      "type": "shell",
      "command": "${workspaceRoot}/node_modules/tsx/dist/cli.mjs",
      "args": ["--test", "${relativeFile}"],
      "presentation": {
        "clear": true,
        "showReuseMessage": false,
        "echo": false
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
